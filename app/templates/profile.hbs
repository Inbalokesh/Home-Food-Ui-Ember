<Header />

<section>
    <div class="side">
        <div class="pro">
            <h1>Profile</h1>
            <div class="pbox">
                <div class="imgb">
                    <img src="images/img.jpg" alt="Profile image" height="250px" width="250px">
                    <div class="button_row">
                        <button type="button" id="edit-btn">Edit profile</button>
                        <button type="button" id="delete_user">Delete</button>
                        <button type="submit" id="logout_user">Logout</button>
                    </div>

                </div>
                <div>
                    <div class="sep">
                        <label>Name</label>
                        <input type="text" id="user_name" placeholder="Your Name" value={{@model.user.name}} disabled="">
                    </div>
                    <div class="sep">
                        <label>Mobile No</label>
                        <input type="tel" id="user_phonenumber" value={{@model.user.mobile_number}} placeholder="Mobile No" disabled="">
                    </div>
                    <div class="sep">
                        <label>Email</label>
                        <input type="email" id="user_email" value={{@model.user.email}} placeholder="Email" disabled="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="history">
        <h2>
            My Orders
        </h2>
        <div class="overflowbox">

            {{#each @model.orders as |order index|}}
                <OrderHistory @id={{order.id}} @name={{@model.user.name}} @count={{incrementIndex index}}/>
            {{/each}}

        </div>
    </div>
</section>