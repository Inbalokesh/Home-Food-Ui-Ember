{{page-title "Signin"}}
<div class="log">
    <div class="loginbox">
        <LinkTo @route="index">
            <img src="/images/LOGO.png" alt="logo">
        </LinkTo>
        <h1 class="form-title">Login</h1>
        <form class="form">
            <label>Mobile No</label>
            <input type="tel" class="inp" id="user_phonenumber" pattern="[6-9]{1}[0-9]{9}" maxlength="10"
                placeholder="Mobile No" required="">
            <label>Password</label>
            <input type="password" class="inp" id="user_password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                placeholder="Password" required="">
            <button type="submit" class="but" id="logOut">Login
            </button>
        </form>
        <div>
            <p class="f-note">
                Not have an account? <LinkTo @route="signup">Create an Account</LinkTo>
            </p>
        </div>
    </div>
</div>